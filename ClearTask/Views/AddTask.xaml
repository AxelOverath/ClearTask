<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClearTask.Views.AddTask">

    <ContentPage.Content>
        <Grid Padding="20">
            <StackLayout Spacing="15">
                <Button Text="Back" FontSize="16" Padding="5" BackgroundColor="LightGray" Clicked="OnBackButtonClicked" />

                <Label Text="Add New Task" FontSize="24" HorizontalOptions="Center" />

                <Entry x:Name="tasktitle" Placeholder="Task Title" FontSize="18" />

                <Editor x:Name="taskdescription" Placeholder="Task Description" FontSize="16" HeightRequest="100" />

                <DatePicker x:Name="DeadlinePicker" IsVisible="False" />

                <Button Text="Pick Image" Clicked="OnPickImageClicked"/>
                <Image x:Name="taskImage" HeightRequest="150" WidthRequest="150"/>

                <CheckBox x:Name="AdminTicketCheckbox"/>
                <Label Text="Admin ticket?" FontSize="16" VerticalOptions="Center"/>


                <Button Text="Save Task" FontSize="18" Padding="10" BackgroundColor="Green" TextColor="White" Clicked="OnSaveTaskClicked" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
