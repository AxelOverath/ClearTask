<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClearTask.Views.ReportedTasklist"
             BackgroundColor="#F9F9F9"
             Title="Task List">

    <ContentPage.Content>
        <Grid Padding="20">
            <Grid RowDefinitions="Auto, *">

                <!-- Header -->
                <StackLayout Spacing="10">
                    <Label Text="Reported Tasks" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" 
                           TextColor="#333333" />

                    <BoxView HeightRequest="1" BackgroundColor="#D1D1D1" />
                </StackLayout>

                <!-- Task List -->
                <CollectionView Grid.Row="1"
                                ItemsSource="{Binding Tasks}" 
                                SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="15" 
                                   Margin="0,10" 
                                   BorderColor="#E0E0E0" 
                                   CornerRadius="12" 
                                   HasShadow="True"
                                   BackgroundColor="White">

                                <!-- Add TapGestureRecognizer -->
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnTaskTapped" CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>

                                <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="*, Auto" ColumnSpacing="10">

                                    <!-- Task Title -->
                                    <Label Text="{Binding title}" 
                                           FontSize="20" 
                                           FontAttributes="Bold" 
                                           TextColor="#2C3E50" 
                                           Grid.Row="1" 
                                           Grid.ColumnSpan="2" />

                                    <!-- Tag List -->
                                    <CollectionView ItemsSource="{Binding taglist}" 
                                                    ItemsLayout="HorizontalList" 
                                                    HeightRequest="30" 
                                                    Grid.Row="0" 
                                                    Grid.ColumnSpan="2">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Frame Padding="5,2" 
                                                       BackgroundColor="#27AE60" 
                                                       CornerRadius="5" 
                                                       Margin="3">
                                                    <Label Text="{Binding name}" 
                                                           FontSize="12" 
                                                           TextColor="White" />
                                                </Frame>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>

                                    <!-- Deadline -->
                                    <StackLayout Orientation="Horizontal" 
                                                 Grid.Row="2" 
                                                 Grid.Column="0">
                                        <Label Text="Deadline: " 
                                               FontSize="14" 
                                               TextColor="#555555" />
                                        <Label Text="{Binding deadline, StringFormat='{0:MM/dd/yyyy}', FallbackValue='No deadline'}" 
                                               FontSize="14" 
                                               TextColor="#E74C3C" 
                                               FontAttributes="Bold" />
                                    </StackLayout>

                                    <!-- Status Badge -->
                                    <Frame Padding="5,3" 
                                           CornerRadius="5" 
                                           VerticalOptions="Center"
                                           BackgroundColor="{Binding status, Converter={StaticResource StatusColorConverter}}"
                                           Grid.Row="2" 
                                           Grid.Column="1">
                                        <Label Text="{Binding status}" 
                                               FontSize="12" 
                                               TextColor="Black" 
                                               FontAttributes="Bold" 
                                               HorizontalOptions="Center" />
                                    </Frame>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <!-- Add Task Button -->
                <Grid VerticalOptions="End" HorizontalOptions="Center" Grid.Row="2">
                    <Button Text="Add New Task" 
             FontSize="18" 
             Padding="15" 
             BackgroundColor="#007BFF" 
             TextColor="White" 
             CornerRadius="10"
             Clicked="NavigateToAddTaskPage" />
                </Grid>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
