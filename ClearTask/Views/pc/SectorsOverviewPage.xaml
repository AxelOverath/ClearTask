<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ClearTask.Views.Pc"
             x:Class="ClearTask.Views.Pc.SectorsOverviewPage"
             Title="SectorsOverviewPage">
    <VerticalStackLayout Padding="20">
        <Label Text="Gebruikersbeheer" FontSize="24" TextColor="Blue" HorizontalOptions="Center"/>

        <!-- Horizontale scroll voor gebruikers -->
        <CollectionView HeightRequest="150">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Horizontal" Span="1"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" BackgroundColor="MediumSeaGreen" CornerRadius="10" Margin="5"
               WidthRequest="200" HeightRequest="120" HasShadow="True">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:SectorsOverviewPage}}, Path=SectorClickedCommand}"
                                      CommandParameter="{Binding}"/>
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="{Binding name}" FontSize="16" TextColor="White" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


        <Button Text="Nieuwe sector toevoegen" BackgroundColor="Green" TextColor="White" Clicked="OnAddSectorClicked"/>
    </VerticalStackLayout>
</ContentPage>