<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClearTask.Views.Pc.UsersPage"
             Title="Gebruikers"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20">
        <Label Text="Gebruikersbeheer" FontSize="24" TextColor="Blue" HorizontalOptions="Center"/>

        <ListView x:Name="UsersList" BackgroundColor="LightGray">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Role}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Nieuwe gebruiker toevoegen" BackgroundColor="Green" TextColor="White" Clicked="OnAddUserClicked"/>
    </VerticalStackLayout>
</ContentPage>
