<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClearTask.Views.Pc.LoginPage"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Login" FontSize="24" HorizontalOptions="Center" TextColor="Blue"/>

        <Entry Placeholder="Email" x:Name="EmailEntry" Keyboard="Email" BackgroundColor="LightGray"/>
        <Entry Placeholder="Wachtwoord" x:Name="PasswordEntry" IsPassword="True" BackgroundColor="LightGray"/>

        <Button Text="Inloggen" BackgroundColor="Green" TextColor="White"/>
    </VerticalStackLayout>

</ContentPage>
