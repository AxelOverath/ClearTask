<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClearTask.Views.pc.AddSectorPage"
             Title="AddSectorPage">
    <VerticalStackLayout Padding="20">
        <Label Text="Edit sector" FontSize="24" TextColor="Blue" HorizontalOptions="Center"/>

        <Entry Placeholder="Sector name" x:Name="SectorName"/>

        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">

            <Button Text="Save" Clicked="OnSaveClicked" BackgroundColor="Green" TextColor="White"
                CornerRadius="10" Padding="10" WidthRequest="100"/>


            <Button Text="Go Back" Clicked="OnBackClicked" BackgroundColor="Gray" TextColor="White"
                CornerRadius="10" Padding="10" WidthRequest="100"/>

        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>