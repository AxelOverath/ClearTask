<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ClearTask.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ClearTask.Views"
    xmlns:views="clr-namespace:ClearTask.Views.Pc"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="False"
    BackgroundColor="#f0f8ff">

    <TabBar Shell.TabBarBackgroundColor="#1e5631" Shell.TabBarUnselectedColor="#d1e8e2" Shell.TabBarForegroundColor="#a8ffb2" Shell.TabBarTitleColor="White">
        <ShellContent
            ContentTemplate="{DataTemplate local:TaskList}"
            Route="Login"
            Title="Tasks"/>
        <ShellSection Title="User Management">
            <ShellContent Title="Users" Route="users" ContentTemplate="{DataTemplate views:UsersPage}" />
            <ShellContent Title="Add User" Route="addUser" ContentTemplate="{DataTemplate views:AddUserPage}" />
        </ShellSection>
    </TabBar>
</Shell>
