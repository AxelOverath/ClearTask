<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ClearTask.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ClearTask.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="False">

    <TabBar Shell.TabBarBackgroundColor="#288d52" Shell.TabBarUnselectedColor="White" Shell.TabBarForegroundColor="Aquamarine" >
    <ShellContent
        ContentTemplate="{DataTemplate local:TaskList}"
        Route="Login" />
      <ShellSection Title="Gebruikersbeheer">
        <ShellContent Title="Gebruikers" Route="users" ContentTemplate="{DataTemplate views:UsersPage}" />
        <ShellContent Title="Nieuwe gebruiker" Route="addUser" ContentTemplate="{DataTemplate views:AddUserPage}" />
    </ShellSection>
    </TabBar>
</Shell>

